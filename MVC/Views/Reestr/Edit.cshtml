@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@model MVC.Models.ReestrModel

@{
    ViewBag.Title = "Изменение данных";
}

<h3>"@Html.DisplayFor(model => model.Url)"</h3>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)
    @Html.HiddenFor(model => model.ReestrId)

    <fieldset>
        <legend>ReestrModel</legend>

        <div class="editor-label">
            @Html.LabelFor(model => model.Url)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Url)
            @Html.ValidationMessageFor(model => model.Url)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Depth)
            @Html.ValidationMessageFor(model => model.Depth)
        </div>
        <p>
            <input type="submit" value="Применить" />
            @Html.ActionLink("Отмена", "Index")
        </p>
    </fieldset>
}

